# Server Configuration
PORT=3000
NODE_ENV=development

# Database
DATABASE_URL="file:./dev.db"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Email Domain Configuration
# This is the domain that will be used for email aliases
# e.g., if set to "mask.example.com", aliases will be like: abc123@mask.example.com
EMAIL_DOMAIN=mask.example.com

# SMTP Server Configuration (for receiving emails)
SMTP_PORT=25
SMTP_HOST=0.0.0.0

# Outbound SMTP Configuration (for forwarding emails)
# Configure these with your email provider (Gmail, SendGrid, Mailgun, etc.)
SMTP_OUTBOUND_HOST=smtp.gmail.com
SMTP_OUTBOUND_PORT=587
SMTP_OUTBOUND_SECURE=false
SMTP_OUTBOUND_USER=your-email@gmail.com
SMTP_OUTBOUND_PASS=your-app-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Alias Configuration
MAX_ALIASES_PER_USER=50
ALIAS_LENGTH=8
